<section class="min-h-screen flex items-center justify-center px-4">
    <div class="bg-white/90 rounded-2xl shadow-2xl p-10 w-full max-w-xl border border-blue-100">
        <div class="flex flex-col items-center mb-8">
            <div class="bg-blue-100 rounded-full p-3 mb-2 flex items-center justify-center">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" stroke-width="2"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M12 21c-4.418 0-8-5.373-8-10a8 8 0 1116 0c0 4.627-3.582 10-8 10z" />
                    <circle cx="12" cy="11" r="3" stroke="currentColor" stroke-width="2" fill="none" />
                </svg>
            </div>
            <h1 class="text-3xl font-extrabold text-gray-800 text-center tracking-tight">Edit Address</h1>
            <p class="text-gray-500 mt-2 text-center text-sm">Update your address details below</p>
        </div>
        <form action="/update-address" method="POST" class="space-y-6">
            <span class="block text-red-600 text-sm font-bold">
                <%= messages.error%>
            </span>
            <input type="text" id="addressId" name="addressId" value="<%= addressInfo._id %>" hidden/>
            <input type="text" id="userId" name="userId" value="<%= session.user.userId %>" hidden/>
            <div>
                <label for="addressLine1" class="block text-sm font-semibold text-gray-700 mb-1">Address Line 1 <span
                        class="text-red-500">*</span></label>
                <input type="text" id="addressLine1" name="addressLine1" value="<%= addressInfo.addressLine1 %>"
                    required
                    class="w-full px-4 py-2 border border-blue-200 rounded-lg bg-blue-50 focus:ring-2 focus:ring-blue-400 focus:border-blue-400 focus:bg-white transition" />
            </div>
            <div>
                <label for="addressLine2" class="block text-sm font-semibold text-gray-700 mb-1">Address Line 2</label>
                <input type="text" id="addressLine2" name="addressLine2" value="<%= addressInfo.addressLine2 %>"
                    class="w-full px-4 py-2 border border-blue-200 rounded-lg bg-blue-50 focus:ring-2 focus:ring-blue-400 focus:border-blue-400 focus:bg-white transition" />
            </div>
            <div>
                <label for="landmark" class="block text-sm font-semibold text-gray-700 mb-1">Landmark <span
                        class="text-red-500">*</span></label>
                <input type="text" id="landmark" name="landmark" value="<%= addressInfo.landmark %>" required
                    class="w-full px-4 py-2 border border-blue-200 rounded-lg bg-blue-50 focus:ring-2 focus:ring-blue-400 focus:border-blue-400 focus:bg-white transition" />
            </div>
            <div class="flex space-x-4">
                <div class="flex-1">
                    <label for="city" class="block text-sm font-semibold text-gray-700 mb-1">City <span
                            class="text-red-500">*</span></label>
                    <input type="text" id="city" name="city" value="<%= addressInfo.city %>" required
                        class="w-full px-4 py-2 border border-blue-200 rounded-lg bg-blue-50 focus:ring-2 focus:ring-blue-400 focus:border-blue-400 focus:bg-white transition" />
                </div>
                <div class="flex-1">
                    <label for="postalCode" class="block text-sm font-semibold text-gray-700 mb-1">Postal Code <span
                            class="text-red-500">*</span></label>
                    <input type="text" id="postalCode" name="postalCode" value="<%= addressInfo.postalCode %>" required
                        class="w-full px-4 py-2 border border-blue-200 rounded-lg bg-blue-50 focus:ring-2 focus:ring-blue-400 focus:border-blue-400 focus:bg-white transition" />
                </div>
            </div>
            <div>
                <label for="phone" class="block text-sm font-semibold text-gray-700 mb-1">Phone <span
                        class="text-red-500">*</span></label>
                <input type="tel" id="phone" name="phone" value="<%= addressInfo.phone %>" required
                    class="w-full px-4 py-2 border border-blue-200 rounded-lg bg-blue-50 focus:ring-2 focus:ring-blue-400 focus:border-blue-400 focus:bg-white transition" />
            </div>
            <div>
                <label for="addressType" class="block text-sm font-semibold text-gray-700 mb-1">Address Type <span
                        class="text-red-500">*</span></label>
                <select id="addressType" name="addressType" required
                    class="w-full px-4 py-2 border border-blue-200 rounded-lg bg-blue-50 focus:ring-2 focus:ring-blue-400 focus:border-blue-400 focus:bg-white transition">
                    <option value="">Select Type</option>
                    <option value="home" <%=addressInfo.addressType==='home' ? 'selected' : '' %>>Home</option>
                    <option value="work" <%=addressInfo.addressType==='work' ? 'selected' : '' %>>Work</option>
                    <option value="other" <%=addressInfo.addressType==='other' ? 'selected' : '' %>>Other</option>
                </select>
            </div>
            <div class="flex justify-end pt-4">
                <button type="submit"
                    class="bg-gradient-to-r from-orange-500 to-blue-500 text-white font-bold hover:to-blue-800 text-white font-bold px-8 py-2 rounded-lg shadow-lg transition transform hover:-translate-y-0.5 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-400">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</section>