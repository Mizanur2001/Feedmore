<!--if select online payment then redirect to Link-->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.querySelector('.cart form');
        if (!form) return;

        form.addEventListener('submit', function (e) {
            const onlinePayment = document.querySelector('input[name="paymentMethod"][value="online"]');
            const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
            const errorMessage = document.getElementById('error_message');

            // Prevent online payment if no address is selected
            if (onlinePayment && onlinePayment.checked) {
                if (!selectedAddress) {
                    e.preventDefault();
                    errorMessage.textContent = "Please select an address before proceeding to online payment.";
                    return;
                }
                localStorage.setItem('selectedAddressValue', selectedAddress.value);
                e.preventDefault();
                window.location.href = "/customers/payment-processing?checkout";
            }
        });

        // On page load, restore selected address from localStorage
        const savedAddress = localStorage.getItem('selectedAddressValue');
        if (savedAddress) {
            const addressRadios = document.querySelectorAll('input[name="selectedAddress"]');
            addressRadios.forEach(radio => {
                if (radio.value === savedAddress) {
                    radio.checked = true;
                }
            });
        }
    });
</script>


<!-- if the Parameters are "?online_payment=redirect" then verify the payment and place Order-->
<script>
    if (window.location.search.includes('online_payment=redirect')) {
        document.getElementById('payment-loader').style.display = 'flex';
        const errorMessage = document.getElementById('error_message');

        if (!"<%= session.merchantOrderId %>") {
            window.location.href = '/cart';
        } else {

            const orderId = "<%= session.merchantOrderId %>";
            fetch('/api/v1/tools/payment/phonepe/verify', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ orderId })

            }).then(res => res.json()).then(data => {
                if (data.data == 'FAILED') {
                    fetch('/session/delete/merchant-order-id', {
                        method: 'POST',
                    }).then(() => {
                        document.getElementById('payment-loader').style.display = 'none';
                        errorMessage.textContent = 'Payment failed. Please try again.';
                    })
                }

                if (data.data == 'PENDING') {
                    fetch('/session/delete/merchant-order-id', {
                        method: 'POST',
                    }).then(() => {
                        document.getElementById('payment-loader').style.display = 'none';
                        errorMessage.textContent = 'Payment is pending. Please wait.(suggestion: Use COD)';
                    })
                }

                if (data.data == 'COMPLETED') {
                    localStorage.clear();
                    fetch('/session/add/payment-type', {
                        method: 'POST',
                        credentials: 'include',
                        headers: { 'Content-Type': 'application/json' }
                    }).then((data) => {
                        document.getElementById('payment-loader').style.display = 'none';
                        const submitButton = document.querySelector('.cart form button[type="submit"]');
                        if (submitButton) {
                            submitButton.click();
                        }
                    }).catch(err => {
                        console.error('Error adding payment type:', err);
                    });
                }
            }).catch(err => {
                console.error('Payment verification failed:', err);
                alert('Payment verification failed. Please try again.');
            });
        }
    }
</script>