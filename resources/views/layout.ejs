<body>
    <nav class="mx-auto flex items-center justify-between py-2 md:py-4">
        <div>
            <a href="/"><img class="w-32 logo" src="/img/logo.png" alt="logo"></a>
        </div>
        <div>
            <ul class="flex items-center">
                <li class="ml-4 sm:ml-6 text-sm sm:text-lg"><a href="/">Menu</a></li>
                <%if(!session.user){%>
                    <li class="ml-4 sm:ml-6 text-sm sm:text-lg"><a href="/register">Register</a></li>
                    <li class="ml-4 sm:ml-6 text-sm sm:text-lg"><a href="/login">Login</a></li>
                    <%}else{%>
                        <%if(session.user.role=='customer'){ url='/customers/orders' }else{ url='/admin/orders' }%>
                            <li> <a href="<%= url%>" class="ml-4 sm:ml-6 text-sm sm:text-lg">Orders </a></li>
                            <li><img class="ml-4 sm:ml-6" src="/img/user.png" alt="user"></li>
                            <li class="ml-1 text-sm sm:text-lg"> <a href="/logout">
                                    <div class="flex flex-row md:flex-row">
                                        <div> Welcome </div>
                                        <div class="ml-1 md:ml-2">
                                            <b>
                                                <%let name; if(session.user.name.includes(' ')) {
                                                     name = session.user.name.substring(0, session.user.name.indexOf(' '))
                                                }
                                                else{
                                                    name = session.user.name
                                                }%>
                                                <%= name%>
                                            </b>
                                        </div>
                                    </div>
                                </a></li>
                            <%}%>
                                <li class="ml-4 sm:ml-6 text-sm sm:text-lg"><a href="/cart"
                                        class="inline-block px-4 py-2 rounded flex items-center">
                                        <span id="cartCounter" class="text-white font-bold pr-2">
                                            <%= session.cart ? session.cart.totalQty : '' %>
                                        </span> <img src="/img/cart.png" alt="cart"></a>
                                </li>
            </ul>
        </div>
    </nav>
